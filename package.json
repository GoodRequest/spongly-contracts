{
	"name": "spongly-contracts",
	"version": "0.2.4",
	"description": "Smart contracts for Spongly protocol",
	"author": "GoodRequest s.r.o.",
	"license": "MIT",
	"engines": {
		"node": ">=18.14.0",
		"npm": ">=9.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GoodRequest/spongly-contracts"
	},
	"scripts": {
		"compile": "npx hardhat compile",
		"export-abi": "npx hardhat export-abi --no-compile",
		"test": "npx hardhat test --network hardhat",
		"coverage": "npx hardhat coverage --network hardhat",
		"lint": "npx solhint contracts/**/*.sol",
		"lint-fix": "npx solhint --fix contracts/**/*.sol",
		"gas-report": "npx hardhat --network hardhat gas-report",
		"interact": "npx hardhat run ./scripts/interact.ts --network optimisticGoerli",
		"op:generate-stats": "npx hardhat --network optimisticEthereum run ./scripts/generateStats/generateUserStats.ts"
	},
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "1.0.0",
		"@nomicfoundation/hardhat-network-helpers": "1.0.0",
		"@nomicfoundation/hardhat-toolbox": "2.0.2",
		"@nomiclabs/hardhat-ethers": "2.2.3",
		"@nomiclabs/hardhat-etherscan": "3.1.0",
		"@nomiclabs/hardhat-solhint": "3.0.1",
		"@openzeppelin/contracts-upgradeable": "4.8.3",
		"@openzeppelin/hardhat-upgrades": "1.22.1",
		"@typechain/ethers-v5": "10.1.0",
		"@typechain/hardhat": "6.1.2",
		"@types/chai": "4.2.0",
		"@types/mocha": ">=9.1.0",
		"axios": "1.5.0",
		"chai": "4.2.0",
		"console-log-colors": "0.4.0",
		"ethers": "5.7.2",
		"ganache-cli": "^6.12.2",
		"hardhat": "2.14.0",
		"hardhat-abi-exporter": "2.10.1",
		"hardhat-deploy": "^0.11.43",
		"hardhat-gas-reporter": "1.0.8",
		"ipfs-http-client": "56.0.2",
		"prettier": "3.0.1",
		"prettier-plugin-solidity": "1.1.3",
		"solhint": "3.4.1",
		"solidity-coverage": "0.8.1",
		"ts-node": "10.9.1",
		"typechain": "8.1.0",
		"typescript": "5.0.4"
	},
	"dependencies": {
		"dotenv": "16.0.3"
	}
}
